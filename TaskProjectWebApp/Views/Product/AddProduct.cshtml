@model ProductViewModel

<div class="row">
    <div class="col">
        <form asp-controller="Product" asp-action="AddProduct">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="CategoryId" />


            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" style="height:300px"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>


            <div class="d-flex justify-content-around  mb-3">


                <div class="p-2">
                    <a class="btn btn-secondary" href="/Home/Index">Vazgeç</a>
                </div>
                <div class="p-3">
                    <input type="submit" value="Ekle" class="btn btn-success btn-block" />
                </div>

            </div>

        

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
